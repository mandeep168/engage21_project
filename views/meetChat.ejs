<!DOCTYPE html>
<html>
  <head>
	<meta charset="utf-8">

  <link rel="icon" href="/logo.png" type="image/icon type" >
  <link rel="stylesheet" type="text/css" href="/style.css">
  <link rel="stylesheet" type="text/css" href="/chat-style.css">

	<script src="/socket.io/socket.io.js"></script>
	<script src="https://kit.fontawesome.com/9d2575df47.js" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

	<title>Chat</title>
	<script>
    const ROOM_ID = "<%= roomId %>";
  </script>
	
 </head>
 <body onload="time()">
  
	<div class="main">

	 <div class="main__right">
    <div id="nav-bar">
        <div id="meet-join" class="nav-option">Join the meeting</div>
        <div id="leave-chat" class="nav-option">Leave Chat</div>
       <div id="timer" class="nav-option"> </div>
    </div>
    <div class="main__chat_window">
      <div class="messages">

         <% msgs.forEach(function(msgs) { %>
           <div class="message">
            <div class="msg">
              <b><%= msgs.name %></b>
              <b class="time-in-message"><%= msgs.created %></b>
            </div>
              <span> <%= msgs.msg %></span>
           </div>
          <% }); %>
    
      </div>
     </div>
     <div class="main__message_container">
      <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
      <div id="send" class="options__button">
        <i class="fas fa-arrow-circle-right" aria-hidden="true"></i>
      </div>
     </div>
    </div>
  </div>

  <script src="/chat-script.js" ></script>

 </body>
</html>